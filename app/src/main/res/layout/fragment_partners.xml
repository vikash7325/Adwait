<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partner_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_with_line"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <!--Page 1-->
    <LinearLayout
        android:id="@+id/page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/static_image_hgt"
            android:layout_height="@dimen/nav_header_image"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_heart" />


        <android.adwait.com.utils.customfonts.ADBoldFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:padding="5dp"
            android:text="@string/partner_title"
            android:textAllCaps="false"
            android:textColor="@color/hint_text_color2"
            android:textSize="@dimen/medium_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/partner_header"
                android:textColor="@color/app_text"
                android:textSize="@dimen/medium_text" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:scaleType="fitXY"
                android:src="@drawable/home_banner_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|left"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/padd_10"
                    android:layout_height="@dimen/padd_10"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blue_dot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/partner_point1"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|left"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/padd_10"
                    android:layout_height="@dimen/padd_10"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blue_dot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/partner_point2"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/medium_text" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_primary_color_bg"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_text" />


    </LinearLayout>

    <!--Page 2-->
    <LinearLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <android.adwait.com.utils.customfonts.ADBoldFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:padding="5dp"
            android:text="@string/local_partners"
            android:textAllCaps="false"
            android:textColor="@color/app_text"
            android:textSize="@dimen/medium_text" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/pin_box"
            android:background="@color/colorPrimary" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box"
                android:layout_marginRight="198dp"
                android:background="@color/colorPrimary" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/pin_box"
                android:background="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/mini_rounded_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padd_10"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/padd_10"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="@dimen/dashboard_user"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:paddingRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_guest_user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="@string/name1"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.5"
                android:background="@drawable/mini_rounded_white_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padd_10"
                android:paddingTop="5dp"
                android:paddingRight="@dimen/padd_10"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="@dimen/nav_header_height"
                    android:layout_height="@dimen/dashboard_user"
                    android:paddingLeft="5dp"
                    android:paddingTop="8dp"
                    android:paddingRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_guest_user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="@string/name2"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/small_text" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_white_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/padd_10"
                    android:layout_height="@dimen/padd_10"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blue_dot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/partner_point11"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/padd_10"
                    android:layout_height="@dimen/padd_10"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blue_dot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/partner_point12"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="@dimen/padd_10"
                    android:layout_height="@dimen/padd_10"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/blue_dot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="@string/partner_point13"
                    android:textAllCaps="false"
                    android:textColor="@color/app_text"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="@string/be_our_partner"
                android:textColor="@color/app_text"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/click_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/click_here"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_text" />


        </LinearLayout>

        <Button
            android:id="@+id/previous_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_primary_color_bg"
            android:text="@string/previous"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_text" />


    </LinearLayout>


</LinearLayout>