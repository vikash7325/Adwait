<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/drawer_header_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/user"
        android:layout_width="@dimen/nav_header_image"
        android:layout_height="@dimen/nav_header_image"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/nav_header_desc"
        android:src="@drawable/ic_rounded_user" />

    <android.adwait.com.utils.customfonts.ADBoldFont
        android:id="@+id/nav_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="@string/nav_header_title"
        android:textColor="@color/app_text"
        android:textSize="@dimen/large_text" />
</LinearLayout>
